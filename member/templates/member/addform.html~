     $('#agreeButton, #disagreeButton').on('click', function() {
        var whichButton = $(this).attr('id');

        $('#registrationForm')
            .find('[name="agree"]')
                .val(whichButton === 'agreeButton' ? 'yes' : 'no')
                .end()
            // Revalidate the field manually
            .formValidation('revalidateField', 'agree');
    });
});
</script>
